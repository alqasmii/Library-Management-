<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Member Form View -->
    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form string="Library Member">
                <header>
                    <field name="membership_status" widget="statusbar" statusbar_visible="active,inactive"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_loans" icon="fa-book" attrs="{'invisible': [('active_loan_count', '=', 0)]}">
                            <field name="active_loan_count" widget="statinfo" string="Active Loans"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_loans" icon="fa-exclamation-triangle" attrs="{'invisible': [('overdue_loan_count', '=', 0)]}">
                            <field name="overdue_loan_count" widget="statinfo" string="Overdue"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_loans" icon="fa-history">
                            <field name="total_loans" widget="statinfo" string="Total Loans"/>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Inactive" bg_color="bg-warning" attrs="{'invisible': [('membership_status', '!=', 'inactive')]}"/>
                    <widget name="web_ribbon" title="Suspended" bg_color="bg-danger" attrs="{'invisible': [('membership_status', '!=', 'suspended')]}"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="member_id"/>
                            <field name="barcode"/>
                            <field name="member_type_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="max_concurrent_loans" readonly="1"/>
                            <field name="max_loan_days" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="address" placeholder="Full address..."/>
                    </group>
                    <group>
                        <group>
                            <field name="membership_start_date"/>
                            <field name="membership_end_date"/>
                        </group>
                        <group>
                            <field name="total_fines" readonly="1" attrs="{'invisible': [('total_fines', '=', 0)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Borrowing History">
                            <field name="borrow_ids" readonly="1">
                                <tree decoration-danger="state=='overdue'">
                                    <field name="name"/>
                                    <field name="book_id"/>
                                    <field name="borrow_date"/>
                                    <field name="due_date"/>
                                    <field name="return_date"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Member Tree View -->
    <record id="view_library_member_tree" model="ir.ui.view">
        <field name="name">library.member.tree</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <tree string="Library Members" decoration-muted="membership_status!='active'">
                <field name="name"/>
                <field name="member_id"/>
                <field name="member_type_id"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="active_loan_count"/>
                <field name="overdue_loan_count"/>
                <field name="membership_status" widget="badge" decoration-success="membership_status=='active'" decoration-warning="membership_status=='inactive'" decoration-danger="membership_status=='suspended'"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Member Kanban View -->
    <record id="view_library_member_kanban" model="ir.ui.view">
        <field name="name">library.member.kanban</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="member_id"/>
                <field name="member_type_id"/>
                <field name="email"/>
                <field name="active_loan_count"/>
                <field name="overdue_loan_count"/>
                <field name="membership_status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <br/>
                                    <span class="text-muted"><field name="member_id"/></span>
                                </div>
                                <span t-if="record.membership_status.raw_value == 'active'" class="badge badge-success">Active</span>
                                <span t-if="record.membership_status.raw_value == 'inactive'" class="badge badge-warning">Inactive</span>
                                <span t-if="record.membership_status.raw_value == 'suspended'" class="badge badge-danger">Suspended</span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><field name="member_type_id"/></div>
                                <div t-if="record.email.raw_value">âœ‰ <field name="email"/></div>
                                <div>ðŸ“š Active: <strong><field name="active_loan_count"/></strong></div>
                                <div t-if="record.overdue_loan_count.raw_value > 0" style="color: red;">âš  Overdue: <strong><field name="overdue_loan_count"/></strong></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Member Search View -->
    <record id="view_library_member_search" model="ir.ui.view">
        <field name="name">library.member.search</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <search string="Search Members">
                <field name="name"/>
                <field name="member_id"/>
                <field name="email"/>
                <field name="member_type_id"/>
                <filter string="Active" name="active" domain="[('membership_status','=','active')]"/>
                <filter string="Inactive" name="inactive" domain="[('membership_status','=','inactive')]"/>
                <filter string="Has Active Loans" name="has_loans" domain="[('active_loan_count','>',0)]"/>
                <filter string="Has Overdue" name="has_overdue" domain="[('overdue_loan_count','>',0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Member Type" name="group_type" context="{'group_by':'member_type_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by':'membership_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Member Action -->
    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new library member
            </p>
            <p>
                Register members to track their borrowing activity.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="library_member_menu"
              name="All Members"
              parent="library_members_menu"
              action="action_library_member"
              sequence="10"/>
</odoo>

