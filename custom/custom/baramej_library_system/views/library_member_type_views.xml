<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Member Type Tree View -->
    <record id="library_member_type_view_tree" model="ir.ui.view">
        <field name="name">library.member.type.tree</field>
        <field name="model">library.member.type</field>
        <field name="arch" type="xml">
            <tree string="Member Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="max_concurrent_loans"/>
                <field name="max_loan_days"/>
                <field name="fine_per_day"/>
                <field name="member_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Member Type Form View -->
    <record id="library_member_type_view_form" model="ir.ui.view">
        <field name="name">library.member.type.form</field>
        <field name="model">library.member.type</field>
        <field name="arch" type="xml">
            <form string="Member Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="max_concurrent_loans"/>
                            <field name="max_loan_days"/>
                            <field name="fine_per_day"/>
                            <field name="member_count"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description of this member type..."/>
                    </group>
                    <notebook>
                        <page string="Members">
                            <field name="member_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="member_id"/>
                                    <field name="email"/>
                                    <field name="membership_status"/>
                                    <field name="active_loan_count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Member Type Kanban View -->
    <record id="library_member_type_view_kanban" model="ir.ui.view">
        <field name="name">library.member.type.kanban</field>
        <field name="model">library.member.type</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="color"/>
                <field name="max_concurrent_loans"/>
                <field name="max_loan_days"/>
                <field name="member_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <br/>
                                        <span class="text-muted"><field name="code"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>ðŸ“š Max Books: <strong><field name="max_concurrent_loans"/></strong></div>
                                    <div>ðŸ“… Max Days: <strong><field name="max_loan_days"/></strong></div>
                                    <div>ðŸ‘¥ Members: <strong><field name="member_count"/></strong></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Member Type Action -->
    <record id="library_member_type_action" model="ir.actions.act_window">
        <field name="name">Member Types</field>
        <field name="res_model">library.member.type</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first member type
            </p>
            <p>
                Member types define borrowing limits and privileges for different member categories.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="library_member_type_menu"
              name="Member Types"
              parent="library_config_menu"
              action="library_member_type_action"
              sequence="10"/>
</odoo>
